{
  "name": "Trunk-Player Frontend",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:0-20",

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [],

  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y bash-completion && sudo npm i -g npm-check-updates && npm install",

  "customizations": {
    "vscode": {
      "settings": {
        "[javascript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[typescript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "vsicons.dontShowNewVersionMessage": true,
        "git.autofetch": true,
        "git.confirmSync": false,
        "git.suggestSmartCommit": false,
        "files.associations": {
          "*.env.*": "env",
          "*.env.development": "env",
          "*.env.test": "env",
          "*.env.production": "env",
          "*.env.local": "env",
          "*.env.*.local": "env"
        },
        "typescript.suggestionActions.enabled": false,
        "javascript.suggestionActions.enabled": false
      },
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "irongeek.vscode-env",
        "ecmel.vscode-html-css",
        "zignd.html-css-class-completion",
        "bradlc.vscode-tailwindcss",
        "austenc.tailwind-docs",
        "eamodio.gitlens",
        "github.copilot",
        "github.copilot-chat"
      ]
    }
  },
  // Environment Variables
  "remoteEnv": {
    "NEXT_PUBLIC_RECOMMENDEDBASEAPIURL": "https://dev-api.trunkplayer.io/apiv1"
  }
  // Comment out to connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
  // "remoteUser": "node"
}
